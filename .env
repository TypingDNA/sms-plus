PORT=4000
BASE_URL=https://localhost:4000

#Database connection params (MongoDB as default)
    # MongoDB
    MONGO_URI=
    MONGO_DB_NAME=

    # Firebase
    FIREBASE_CREDENTIAL=
    FIREBASE_PROJECT_ID=
    FIREBASE_DATABASE_ID=

    # Redis
    REDIS_HOST=127.0.0.1
    REDIS_PORT=6379
    REDIS_PASSWORD=yourpassword
    REDIS_DB=0

DATA_STORE=firestore

# TypingDNA (Immutable)
TYPINGDNA_SERVER=
TYPINGDNA_API_KEY=
TYPINGDNA_API_SECRET=

# SMS Gateway (Twilio as default)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_API_KEY=
TWILIO_API_SECRET=
TWILIO_FROM_NUMBER=

# IAM Bridges (enable/disable)
ENABLED_BRIDGES=okta,cyberark
OKTA_SHARED_SECRET=okta

# Encryption
HASH_SALT=yourhashsalt

# TypingDNA Text
TYPINGDNA_TEXT_DEFAULT=secured by typingdna

# Logging
LOG_REQUESTS=true

# Configuration
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
DEFAULT_LANGUAGE=en
