{
  "name": "sms-plus",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "prebuild": "rimraf dist",
    "build": "tsc && npm run copy:files",
    "start": "node dist/server.js",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "copy:files": "cp -r src/templates dist/ && cp src/resources/Canvas/Poppins-SemiBold.ttf dist/resources/Canvas/ && cp src/texts.txt dist/"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "canvas": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "firebase-admin": "^13.6.0",
    "ioredis": "^5.3.2",
    "mongodb": "^6.18.0",
    "twilio": "^4.14.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.7",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
